generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id   String   @id @default(cuid())
  name     String
  email    String @unique
  role     String
  cv       Cv[]
}

model Cv {
  id    String @id @default(cuid())
  name  String
  age   Int 
  job   String
  ownerId String
  owner  User @relation(fields: [id], references: [id])
  skills CvSkill[]
}

model Skill {
  id    String @id @default(cuid())
  designation  String
  cv CvSkill[]
}

model CvSkill {
  cvId String
  skillId String
  cv      Cv @relation(fields: [cvId], references: [id])
  skill   Skill @relation(fields: [skillId], references: [id])
  @@id([cvId, skillId])
}  
